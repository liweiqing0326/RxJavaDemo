<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
>

        <Button
            android:id="@+id/test12_btn1"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:text="Cold observables" />

        <Button
            android:id="@+id/test12_btn2"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:text="Hot observables" />

        <Button
            android:id="@+id/test12_btn3"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:text="unsubscribe_connect" />

        <Button
            android:id="@+id/test12_btn4"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:text="unsubscribe_subscribe" />

        <Button
            android:id="@+id/test12_btn5"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:text="refCount" />

        <Button
            android:id="@+id/test12_btn6"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:text="replay" />

        <Button
            android:id="@+id/test12_btn7"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:text="cache" />



    </LinearLayout>
</ScrollView>


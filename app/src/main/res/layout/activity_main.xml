<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/main_btn2"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:text="基本使用" />

        <Button
            android:id="@+id/main_btn3"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:text="创建操作符" />

        <Button
            android:id="@+id/main_btn4"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:text="过滤操作符" />

        <Button
            android:id="@+id/main_btn5"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:text="条件和布尔操作符" />

        <Button
            android:id="@+id/main_btn6"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:text="算术和聚合操作符" />

        <Button
            android:id="@+id/main_btn7"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:text="转换操作符" />

        <Button
            android:id="@+id/main_btn8"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:text="组合操作符 " />

        <Button
            android:id="@+id/main_btn9"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:text="辅助操作符" />

        <Button
            android:id="@+id/main_btn10"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:text="错误处理" />

        <Button
            android:id="@+id/main_btn11"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:text="hot/cold" />

        <Button
            android:id="@+id/main_btn12"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:text="副作用" />

    </LinearLayout>
</ScrollView>

